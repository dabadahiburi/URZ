<div class="container">
  <div class="contents">
    <% @posts.each do |post|%>
      <div class="content">
        <div class="user-about">
          <div class="image">
            <% if post.user.image.attached?%>
            <%= image_tag post.user.image%>
            <% else %>
            <%# aaaa %>
            <% end %>
          </div>
          <div class="profile">
            <div class="name-history">
              <div class="name">
                <%= post.user.name %>
              </div>
              <div class="leaning_history">
                <%= "学習歴: #{post.user.learning_history}年"%>
              </div>
            </div>
            <div class="purpose">
              <%="railsを勉強してる理由: #{post.user.purpose}"%>
            </div>
          </div>
        </div>

        <div class="text">
          <p><%= post.content%></p>
        </div>

        <% if post.images.attached? %>
          <div class="images">
            <% post.images.each do |image| %>
              <%= image_tag image %>
            <% end %>
            </div>
        <% end %>
        <div class="action">
          <div class="like">

          </div>
          <div class="comment">

          </div>
        </div>
      </div>
    <% end %>
  </div>
    <div class="sidemenu">
      <div class="box"></div>
      <div class="box"></div>
    </div>
</div>
